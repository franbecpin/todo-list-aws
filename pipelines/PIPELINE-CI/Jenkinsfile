pipeline {
    agent any

    stages {
        stage('Get Code') {
            steps {
                deleteDir()
                git branch: "develop", url: "https://github.com/franbecpin/todo-list-aws.git"                
            }
        } 
        
        stage ('Static Test'){
            steps{
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    sh'''
                        export PYTHONPATH="$WORKSPACE/src"
                        flake8 --version
                        flake8 --format=pylint --exit-zero src > flake8.out
                    '''
                    recordIssues sourceCodeRetention: 'LAST_BUILD', tools: [flake8(pattern: 'flake8.out')]
                    

                }
            }
        }
        
        stage('Security') {
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                   
                    sh '''
                    #!/bin/bash
                    set -euxo pipefail
                    
                    # PATH para los binarios instalados con --user
                    export PATH="$HOME/.local/bin:$PATH"
                    
                    # Instala bandit para el usuario jenkins
                    python3 -m pip install --user --upgrade pip
                    python3 -m pip install --user --upgrade bandit
                    
                    # Ejecuta Bandit y exporta en formato que entiende el parser de Bandit
                    python3 -m bandit -r . -x venv,.venv,tests,build,dist -f txt -o bandit.out
                    '''

                    recordIssues(sourceCodeRetention: 'LAST_BUILD', tools: [bandit(pattern: 'bandit.out')])

                }
            }
        }
    }
}