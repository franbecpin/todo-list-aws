pipeline {
    agent any

    stages {
        stage('Get Code') {
            steps {
                deleteDir()
                git branch: "develop", url: "https://github.com/franbecpin/todo-list-aws.git"                
            }
        } 
        
        stage ('Static Test'){
            steps{
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    sh'''
                        export PYTHONPATH="$WORKSPACE/src"
                        flake8 --version
                        flake8 --format=pylint --exit-zero src > flake8.out
                    '''
                    recordIssues sourceCodeRetention: 'LAST_BUILD', tools: [flake8(pattern: 'flake8.out')]
                    

                }
            }
        }
        
        stage('Security') {
            steps {
                catchError(buildResult: 'UNSTABLE', stageResult: 'FAILURE') {
                    sh(script: '''
                    #!/bin/bash
                    set -euxo pipefail
                    
                    export PATH="$HOME/.local/bin:$PATH"
                    
                    python3 -m pip install --user --upgrade pip
                    python3 -m pip install --user --upgrade bandit
                    
                    # Emitir en formato pylint para que pyLint(...) pueda parsearlo
                    python3 -m bandit -r . -x venv,.venv,tests,build,dist \ -f pylint -o bandit.out  ''', shell: '/bin/bash')
                    
                    // Publica usando el parser de pylint
                    recordIssues(sourceCodeRetention: 'LAST_BUILD',tools: [pyLint(pattern: 'bandit.out')])
                }
            }
        }
    }
}